h1
  max-width 600px
  width 100%
  padding 20px
  margin 0 auto

button
    display table
    margin -75px auto 0
    border solid 4px white
    padding 5px 10px
    line-height 0
    color white
    font-weight bold
    text-transform uppercase
    font-size 22px
    position relative
    z-index 2
    border-radius 15px
    background linear-gradient(28deg, #FE5B61 0%, #ED5686 100%)
    transition 0.5s

    i
      font-size: 1.2em
      vertical-align: middle
      padding: 5px 20px

    &:hover
      cursor pointer
      transform scale(1.1)

    &:active
      transform scale(0.9)
